{
  "compilerOptions": {
    // Output
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "outDir": "dist/esm/",
    // User-code
    "strict": true,
    // Source Maps
    "declaration": true,
    "rootDir": "./src/",
    "verbatimModuleSyntax": true
  },
  "include": ["./src/**/*"]
}
